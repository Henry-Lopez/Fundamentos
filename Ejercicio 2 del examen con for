#include <iostream>
using namespace std;
int main()
{
    int num;
    float precio, descuento, precioFinal, suma = 0;
    cout<<"ingresa el numero de productos :";
    cin>> num;
    for(int i = 1 ; i<=num ; i++){
    
    cout << "introduzca el precio: ";
    cin >> precio;
    cout << "introduzca el porcentaje de descuento: ";
    cin >> descuento;
    precioFinal = precio-(precio * (descuento/100));
    cout << "el precio final con descuento es de : " << precioFinal << endl;

        suma += precioFinal;
    }
    cout<<"el acumulado es :"<<suma;
return 0;

}
