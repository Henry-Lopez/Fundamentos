#include <iostream>
#include <cmath>

using namespace std;

double CalcularFactorial(int n)
{
    if (n == 0)
        return 1;
    double factorial = 1.0;
    for (int i = 1; i <= n; i++)
    {
        factorial *= i;
    }
    return factorial;
}

double CalcularExponencial(double x, int n)
{
    double resultado = 0.0;
    for (int i = 0; i <= n; i++)
    {
        resultado += pow(x, i) / CalcularFactorial(i);
    }
    return resultado;
}

int main()
{
    double x;
    int n;

    cout << "Ingrese el valor de x: ";
    cin >> x;

    cout << "Ingrese la cantidad de tÃ©rminos a calcular (n): ";
    cin >> n;

    double resultado = CalcularExponencial(x, n);

    cout << "e^x = " << resultado << endl;

    return 0;
}
